<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="dist/main.js" verb="*" modules="iisnode"/>
    </handlers>
    
    <rewrite>
      <rules>
        <!-- API routes -->
        <rule name="NestJS API" stopProcessing="true">
          <match url="api/*" />
          <action type="Rewrite" url="dist/main.js" />
        </rule>
      </rules>
    </rewrite>
    
    <iisnode
      nodeProcessCommandLine="node.exe"
      node_env="production" />
  </system.webServer>
</configuration>